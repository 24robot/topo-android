<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

     <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/textNewTask"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/add_textbox_hint" >

            <requestFocus />
       </EditText>

        <Button
            android:id="@+id/buttonAddTask"
            android:layout_width="64dip"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/add_button_text" />

    </LinearLayout>
	
     <Spinner 
         android:id="@+id/colorSpinner"
         android:layout_width="match_parent"
         android:layout_height="48dp"
         />
     
     <TextView
            android:id="@+id/primaryTasksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/primary_tasks"
            android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            
            <LinearLayout 
                android:id="@+id/redPrimaryLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView 
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#FF0000"
                    android:contentDescription="@string/description" />         
                    
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:hint="@string/red_primary_task"/>
            </LinearLayout>
            
             <LinearLayout 
                android:id="@+id/greenPrimaryLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView 
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#00FF00"
                    android:contentDescription="@string/description" />         
                    
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:hint="@string/green_primary_task"/>
            </LinearLayout>
            
             <LinearLayout 
               android:id="@+id/bluePrimaryLayout"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1">
               
               <ImageView 
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:background="#0000FF"
                   android:contentDescription="@string/description" />     
                   
               <TextView 
                   android:layout_width="0dp"
                   android:layout_height="24dp"
                   android:layout_weight="1"
                   android:hint="@string/blue_primary_task"/>
           	</LinearLayout>
         </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dip" >

        <TextView
            android:id="@+id/tasksTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.12"
            android:text="@string/secondary_tasks"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="28dp"
            android:layout_height="28dp" />
    </LinearLayout>


    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/row_list_to_do" 
        android:padding="6dip" >

    </ListView>

</LinearLayout>